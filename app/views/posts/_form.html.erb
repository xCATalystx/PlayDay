<% if post.errors.any? %>
  <ul>
    <% post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <%= form_for(post) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :content %>
      <br>
      <%= f.text_area :content %>
    </div>
    <div class="action">
      <%= f.submit %>
    </div>
  <% end %>
</div>