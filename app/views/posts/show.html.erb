<div>
  <div>
    <h1><%= @post.title %></h1>
  </div>
  <div>
    <h2><%= @post.content %></h2>
  </div>
  <p><%= link_to "編輯", edit_post_path(@post) %>
  <%= link_to "刪除", @post, method: :delete, data: { confirm: '確定刪除？' } %></p>
  <hr>
  <ul>
    <% render @comments %>
  </ul>
  <hr>
  <div>
    <%= form_for(@comment, url: post_comments_path(@post), remote: true) do |f| %>
      <%= f.text_area :content %>
      <%= f.submit %>
    <% end %>
  </div>
</div>