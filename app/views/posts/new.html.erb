<div class="container">
  <h1>新增文章</h1>

  <%= form_for(@post) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :content %>
      <br>
      <%= f.text_area :content %>
    </div>
    <div class="action">
      <%= f.submit %>
    </div>
  <% end %>
</div>